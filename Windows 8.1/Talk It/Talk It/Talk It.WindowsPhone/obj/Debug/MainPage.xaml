<Page
    x:Class="Talk_It.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Talk_It"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Minimal">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='1' Icon="Refresh" Label="Refresh"                      ></AppBarButton>
            </CommandBar.PrimaryCommands>
            
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='2' Icon="Cancel" Label="Exit"                   ></AppBarButton>
                <AppBarButton x:ConnectionId='3' Icon="Go" Label="Privacy"                       ></AppBarButton>
                <AppBarButton x:ConnectionId='4' Icon="Help" Label="About"                      ></AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <TextBlock 
            HorizontalAlignment="Left" 
            Height="51" 
            Margin="12,0,0,0" 
            TextWrapping="Wrap" 
            Text="Talk It App"
            FontSize="36"
            Style="{StaticResource HeaderTextBlockStyle}"
            VerticalAlignment="Top" 
            Width="388"/>
        <TextBlock 
        	HorizontalAlignment="Left" 
        	Height="26" 
        	Margin="12,51,0,0" 
        	TextWrapping="Wrap" 
        	Text="Made using SpeechSynthesizer in .NET Library"
        	FontSize="16"
        	Style="{StaticResource SubheaderTextBlockStyle}"
        	VerticalAlignment="Top" 
        	Width="388"/>

        <Rectangle 
            Fill="#FF676772"
            HorizontalAlignment="Left" 
            Height="11"
            Margin="12,82,0,0"
            Stroke="Black"
            VerticalAlignment="Top" 
            Width="378"
            RenderTransformOrigin="0.522,-0.044"/>

        <TextBlock 
            HorizontalAlignment="Left" 
            Height="46"
            Margin="10,179,0,0" 
            TextWrapping="Wrap"
            FontSize="16"
            VerticalAlignment="Top" 
            Width="380">
        	<Run Text="Type in the text field below - what you want to hear!"/>
        	<LineBreak/>
        	<Run Text="And the Tap the Talk it button to hear it :D"/>
        </TextBlock>
        <TextBox x:ConnectionId='5' 
            x:Name="textBox"
            HorizontalAlignment="Left" 
            Height="186"
            Margin="10,246,0,0" 
            TextWrapping="Wrap"
            Text="Your text goes here!"
            VerticalAlignment="Top" 
            Width="380"
                                   
                                        >
            <TextBox.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFAEABAB" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Foreground>
        </TextBox>
        <Rectangle 
        	Fill="#FF676772"
        	HorizontalAlignment="Left" 
        	Height="11"
        	Margin="12,150,0,0"
        	Stroke="Black"
        	VerticalAlignment="Top" 
        	Width="378"
        	RenderTransformOrigin="0.522,-0.044"/>
        <Rectangle 
        	Fill="#FF676772"
        	HorizontalAlignment="Left" 
        	Height="11"
        	Margin="10,453,0,0"
        	Stroke="Black"
        	VerticalAlignment="Top" 
        	Width="378"
        	RenderTransformOrigin="0.522,-0.044"/>
        <Rectangle 
        	Fill="#FF676772"
        	HorizontalAlignment="Left" 
        	Height="11"
        	Margin="10,532,0,0"
        	Stroke="Black"
        	VerticalAlignment="Top" 
        	Width="378"
        	RenderTransformOrigin="0.522,-0.044"/>

        <Button x:ConnectionId='6'
            x:Name="talkItButton"
            Content="Talk It!"
            FontSize="22"
            HorizontalAlignment="Left"
            Height="87" 
            Margin="117,455,0,0"
            VerticalAlignment="Top"
            Width="172"
                                    Background="{x:Null}"/>




    </Grid>
</Page>
    
    

